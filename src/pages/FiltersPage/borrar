const elementosFiltrado = () => {
  const [ciudad, setCiudad] = useState('');
  const [sexo, setSexo] = useState('');
  const [tamaño, setTamaño] = useState('');
  const [especie, setEspecie] = useState('');

 

  const handleCiudad = (event) => {
    setCiudad(event.target.value);
  };

 

  const handleSexo = (event) => {
    setSexo(event.target.value);
  };

 

  const handleTamaño = (event) => {
    setTamaño(event.target.value);
  };

 

  const handleEspecie = (event) => {
    setEspecie(event.target.value);
  };

 

const animalesFiltrados = animales.filter((animal) => {
    const ciudadFiltro = ciudad || animal.ciudad.toLowerCase().includes(ciudad.toLowerCase());
    const sexoFiltro = !sexo || animal.sexo.toLowerCase().includes(sexo.toLowerCase());
    const tamañoFiltro = !tamaño || animal.tamaño.toLowerCase().includes(tamaño.toLowerCase());
    const especieFiltro = !especie || animal.especie.toLowerCase().includes(especie.toLowerCase());

 

    return ciudadFiltro && sexoFiltro && tamañoFiltro && especieFiltro;
  });